@model SIFIET.GestionProgramas.Datos.Modelo.PROGRAMA


@{
    ViewBag.Title = "Agregar Programa";
}

<h2>Agregar Programa</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>PROGRAMA</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.IDPROGRAMA, "ID Programa")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IDPROGRAMA)
            @Html.ValidationMessageFor(model => model.IDPROGRAMA)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IDFACULTAD, "ID Facultad")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IDFACULTAD)
            @Html.ValidationMessageFor(model => model.IDFACULTAD)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NOMPROGRAMA, "Nombre")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NOMPROGRAMA)
            @Html.ValidationMessageFor(model => model.NOMPROGRAMA)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DESCPROGRAMA, "Descripción")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DESCPROGRAMA)
            @Html.ValidationMessageFor(model => model.DESCPROGRAMA)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.JORNANADAPROGRAMA, "Jornada")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.JORNANADAPROGRAMA)
            @Html.ValidationMessageFor(model => model.JORNANADAPROGRAMA)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DURACIONPROGRAMA, "Duración")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DURACIONPROGRAMA)
            @Html.ValidationMessageFor(model => model.DURACIONPROGRAMA)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ADMISIONPROGRAMA, "Admisión")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ADMISIONPROGRAMA)
            @Html.ValidationMessageFor(model => model.ADMISIONPROGRAMA)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CODIGOSNIES, "Codigo SNIES")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CODIGOSNIES)
            @Html.ValidationMessageFor(model => model.CODIGOSNIES)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PERIODODURACION, "Periodo")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PERIODODURACION)
            @Html.ValidationMessageFor(model => model.PERIODODURACION)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ESTADOPROGRAMA, "Estado")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ESTADOPROGRAMA)
            @Html.ValidationMessageFor(model => model.ESTADOPROGRAMA)
        </div>

        <p>
            <input type="submit" value="Agregar" />
            <input type="button" value="Cancel" onclick="javascript:document.location.href='@Url.Action("Index", "Programa")'" />
        </p>
    </fieldset>
}

