@{
    ViewBag.Title = "CargarDatos";
}

<h2>Cargar Datos</h2>

@model System.Data.DataSet
           
@if (Model != null)
{
    <p>Se agregaron los siguientes datos</p>
    <table>
        <tr>
            <th>Nombre</th><th>Duración</th><th>Facultad</th><th>Codigo SNIES</th>
        </tr>
        @for (int i = 0; i < Model.Tables[0].Rows.Count; i++)
     {
         <tr>
            <td>
                @Model.Tables[0].Rows[i][2].ToString()
            </td>
            <td>
                @Model.Tables[0].Rows[i][5].ToString()
            </td>
            <td>
                @Model.Tables[0].Rows[i][1].ToString()
            </td>
            <td>
                @Model.Tables[0].Rows[i][7].ToString()
            </td>        
        </tr>  
    }

    </table> 
}
          


@using (Html.BeginForm("CargarDatos", "Programa", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        Seleccionar Archivo
        <input type="file" name="archivo" /><br/>
        <input type="submit" value="Subir" name="Command" /><br />
    </div>
    <div>
    </div>
}

<div>
    @Html.ActionLink("Ir a inicio", "Index")
</div>